{
  "name": "semtec-js",
  "author": "jultty",
  "version": "0.1.0",
  "description": "Get the semantics of and between technical terms.",
  "main": "dist/app.js",
  "type": "module",
  "homepage": "https://semtec.netlify.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jultty/semtec-js.git"
  },
  "bugs": {
    "url": "https://github.com/jultty/semtec-js/issues"
  },
  "scripts": {
    "dev-start": "nodemon --exec 'ts-node-esm' src/app.ts",
    "dev-test": "jest --watch --detectOpenHandles --noStackTrace",
    "lint": "eslint .",
    "format": "prettier -w src/",
    "format-check": "prettier -c src/",
    "build": "tsc",
    "test": "jest --verbose",
    "collect-coverage": "jest --coverageDirectory docs/coverage",
    "start": "ts-node dist/app.js"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@jest/globals": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "helmet": "^6.2.0",
    "mongoose": "^7.5.1"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/tests/*.test.ts"
    ],
    "verbose": false,
    "collectCoverage": true,
    "coverageDirectory": ".dev-coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
